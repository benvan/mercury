{
  "manifest_version": 2,

  "name": "mercury",
  "description": "Type-to-search your open tabs",
  "version": "1.0",
  "offline_enabled": true,
  "author": "Ben van Enckevort",

  "permissions": [ "tabs" ],
  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "linux": "Ctrl+Shift+I",
        "mac": "Ctrl+Shift+I"
      }
    }
  }

}
